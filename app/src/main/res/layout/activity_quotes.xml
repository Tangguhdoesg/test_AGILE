<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/granny_apple"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10sp"
    tools:context=".Quotes">

    <TextView
        android:id="@+id/moodView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:gravity="center"
        android:text="You've successfully added your mood for today!"
        android:textColor="@color/ocean_green"
        android:textSize="34sp"
        android:textStyle="bold"
        app:drawableTopCompat="@drawable/ic_mood_terrible_100" />

    <TextView
        android:id="@+id/quotesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:gravity="center"
        android:text="fajf akfja fjafka fakjjka fwme fakjj a cajkcfm vajkv meakv aknamv vkavm,e ea"
        android:textColor="@color/ocean_green"
        android:textSize="24sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/okBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/bermuda"
        android:text="OK!"
        android:textSize="24sp" />

</LinearLayout>